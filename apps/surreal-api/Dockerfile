#
# Build the docker image with `npx nx docker-build surreal-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t surreal-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system surreal-api && \
          adduser --system -G surreal-api surreal-api

COPY dist/surreal-api surreal-api
RUN chown -R surreal-api:surreal-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix surreal-api --omit=dev -f install

CMD [ "node", "surreal-api" ]
